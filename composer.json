{
	"name"				: "ipub/forms",
	"type"				: "library",
	"description"		: "Add ability to create forms in better way under Nette",
	"keywords"			: ["nette", "forms"],
	"homepage"			: "https://github.com/iPublikuj/forms.git",
	"license"			: ["BSD-3-Clause", "GPL-2.0", "GPL-3.0"],
	"minimum-stability"	: "dev",

	"authors": [
		{
			"name"		: "Adam Kadlec",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support":{
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/forms/issues"
	},

	"require": {
		"php"				: ">=5.4.0",
		"nette/application"	: "~2.2",
		"nette/di"			: "~2.2",
		"nette/forms"		: "~2.2",
		"nette/http"		: "~2.2",
		"nette/utils"		: "~2.2",
		"latte/latte"		: "~2.2"
	},

	"require-dev": {
		"nette/tester"			: "@dev",
		"nette/bootstrap"		: "@dev",
		"kdyby/doctrine-forms"	: "@dev",
		"latte/latte"			: "@dev",
		"tracy/tracy"			: "~2.2",
		"janmarek/mockista"		: "@dev"
	},

	"suggest": {
		"kdyby/doctrine-forms"	: "If you wanna use entity forms."
	},

	"autoload": {
		"psr-0": {
			"IPub\\Forms\\": "src/"
		}
	}
}