{
	"name"			: "ipub/forms",
	"type"			: "library",
	"description"	: "Add ability to create forms in better way in Nette Framework",
	"keywords"		: ["nette", "forms", "ipub", "ipublikuj", "doctrine"],
	"homepage"		: "https://github.com/iPublikuj/forms",
	"license"		: ["BSD-3-Clause", "GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "iPublikuj:cms",
			"email"		: "info@ipublikuj.eu",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support": {
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/forms/issues"
	},

	"require": {
		"php"				: ">=5.4.0",
		"nette/application"	: "~2.2",
		"nette/di"			: "~2.2",
		"nette/forms"		: "~2.2",
		"nette/http"		: "~2.2",
		"nette/utils"		: "~2.2",
		"latte/latte"		: "~2.2"
	},

	"require-dev": {
		"nette/bootstrap"		: "~2.2",
		"nette/mail"			: "~2.2",
		"nette/robot-loader"		: "~2.2",
		"nette/safe-stream"		: "~2.2",
		"nette/tester"			: "@dev",
		"tracy/tracy"			: "@dev",
		"janmarek/mockista"		: "@dev",
		"kdyby/doctrine-forms"		: "@dev"
	},

	"suggest": {
		"kdyby/doctrine-forms"	: "If you wanna use entity forms."
	},

	"autoload": {
		"psr-0": {
			"IPub\\Forms\\": "src/"
		}
	}
}
